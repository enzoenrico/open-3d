generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DIRECT_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id      String   @id @default(uuid())
    name    String
    email   String
    Tickets Ticket[]
}

model Ticket {
    id          String         @id @default(uuid())
    title       String
    description String
    created_at  DateTime       @default(now())
    status      TicketStatus   @default(OPEN)
    priority    TicketPriority
    authorId    String
    User        User?          @relation(fields: [authorId], references: [id])
}

enum TicketStatus {
    OPEN
    CLOSED
    IN_PROGRESS
    DENIED
}

enum TicketPriority{
	HIGH
	MEDIUM
	LOW
}